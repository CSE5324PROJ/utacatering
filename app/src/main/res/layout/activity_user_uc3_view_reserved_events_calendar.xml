<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user_uc3_ViewReservedEventsCalendar"
    android:id="@+id/userCalendar">

    <!--<CalendarView
        android:id="@+id/calendar_old"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:unfocusedMonthDateColor="#cdcbd6"/>-->

    <com.github.sundeepk.compactcalendarview.CompactCalendarView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/compactcalendar_view"
        android:layout_width="fill_parent"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_height="250dp"
        app:compactCalendarTargetHeight="250dp"
        app:compactCalendarTextSize="16sp"
        app:compactCalendarShouldSelectFirstDayOfMonthOnScroll="false"
        app:compactCalendarDisplayOtherMonthDays="true"
        app:compactCalendarEventIndicatorStyle="no_fill_large_indicator"
        app:compactCalendarCurrentDayIndicatorStyle="no_fill_large_indicator"
        app:compactCalendarOtherMonthDaysTextColor="@color/colorPrimaryDark"
        app:compactCalendarBackgroundColor="#6d77f2"
        app:compactCalendarTextColor="#000000"
        app:compactCalendarCurrentSelectedDayBackgroundColor="#1b35b7"
        app:compactCalendarCurrentDayBackgroundColor="#848dff"
        app:compactCalendarMultiEventIndicatorColor="#fff"
        />

</android.support.constraint.ConstraintLayout>