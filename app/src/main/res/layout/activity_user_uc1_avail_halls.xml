<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/availHallLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user_uc1_availHalls">

    <!-- INCOMPLETE-->

    <TextView
        android:id="@+id/textViewInfo"
        android:layout_width="196dp"
        android:layout_height="101dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:background="#d7dde2"
        android:text="Halls close at 11pm on week nights and 2am on weekends.\n\nHalls open at 7am each day except on Sunday, when the halls open at noon."
        android:textColor="#6f7275"
        android:textStyle="italic"
        app:layout_constraintStart_toEndOf="@+id/textView_dur"
        app:layout_constraintTop_toBottomOf="@+id/spinner_month" />

    <TextView
        android:id="@+id/textView_year"
        android:layout_width="72dp"
        android:layout_height="31dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="Year"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinner_year"
        android:layout_width="84dp"
        android:layout_height="47dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_year" />

    <TextView
        android:id="@+id/textView_month"
        android:layout_width="80dp"
        android:layout_height="31dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="24dp"
        android:text="Month"
        android:textSize="25dp"
        app:layout_constraintStart_toEndOf="@+id/textView_year"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinner_month"
        android:layout_width="72dp"
        android:layout_height="47dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="18dp"
        app:layout_constraintStart_toEndOf="@+id/spinner_year"
        app:layout_constraintTop_toBottomOf="@+id/textView_month" />

    <TextView
        android:id="@+id/textView_day"
        android:layout_width="72dp"
        android:layout_height="31dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="Day"
        android:textSize="25dp"
        app:layout_constraintStart_toEndOf="@+id/textView_month"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinner_day"
        android:layout_width="92dp"
        android:layout_height="47dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="18dp"
        app:layout_constraintStart_toEndOf="@+id/spinner_month"
        app:layout_constraintTop_toBottomOf="@+id/textView_day" />

    <TextView
        android:id="@+id/textView_hour"
        android:layout_width="72dp"
        android:layout_height="31dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="14dp"
        android:text="Hour"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner_duration" />

    <Spinner
        android:id="@+id/spinner_hour"
        android:layout_width="245dp"
        android:layout_height="47dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_hour" />

    <TextView
        android:id="@+id/textView_minute"
        android:layout_width="85dp"
        android:layout_height="31dp"
        android:layout_marginStart="195dp"
        android:layout_marginTop="14dp"
        android:text="Minute"
        android:textSize="25dp"
        app:layout_constraintStart_toEndOf="@+id/textView_hour"
        app:layout_constraintTop_toBottomOf="@+id/spinner_duration" />

    <Spinner
        android:id="@+id/spinner_minute"
        android:layout_width="84dp"
        android:layout_height="47dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@+id/spinner_hour"
        app:layout_constraintTop_toBottomOf="@+id/textView_minute" />

    <TextView
        android:id="@+id/textView_dur"
        android:layout_width="100dp"
        android:layout_height="31dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Duration"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner_year" />

    <Spinner
        android:id="@+id/spinner_duration"
        android:layout_width="84dp"
        android:layout_height="47dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_dur" />

    <TextView
        android:id="@+id/textView_availHalls"
        android:layout_width="178dp"
        android:layout_height="31dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Available Halls"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner_hour" />

    <Spinner
        android:id="@+id/spinner_availHalls"
        android:layout_width="245dp"
        android:layout_height="36dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_availHalls" />

    <Button
        android:id="@+id/button_user_uc2"
        android:layout_width="353dp"
        android:layout_height="73dp"
        android:layout_marginTop="16dp"
        android:text="@string/user_uc1_proceed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner_availHalls" />


</android.support.constraint.ConstraintLayout>